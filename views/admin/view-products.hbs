<section style="background-color: rgb(248, 202, 210); height: 50em;">
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-2 mb-2">Add Product</a>
        </div>
        <table class="table mt-4" id="productsTable">
  <thead>
    <tr>
      
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th>Price</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn fas fa-edit" style="color: black; padding: 0; margin-right: 1em;"></a>
        <a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Confirm to delete {{this.Name}}')" class="btn far fa-trash-alt" style="color: black; padding: 0;"></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>

<script>
  $(function () {
    $('#productsTable').DataTable();

  })
</script>