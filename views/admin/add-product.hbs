<section style="background-color: rgb(241, 158, 127); height: 28em;">
    <div class="container">
        <div class="row" style="display: grid; place-items: center;">
            <div class="col-md-6 mt-3">
                <h2 class="text-center">Add Product</h2>
                <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input style="height: 1.7em;" type="text" name="Name" class="form-control">

                    <label for="">Category</label>
                    <input style="height: 1.7em;" type="text" name="Category" class="form-control">

                    <label for="">Price</label>
                    <input style="height: 1.7em;" type="text" name="Price" class="form-control">

                    <label for="">Description</label>
                    <input style="height: 1.7em;" type="text" name="Description" class="form-control">

                    <label for="">Image</label>
                    <input type="file" name="Image" class="form-control">

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>